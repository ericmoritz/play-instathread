{
    "@context": {
	"vocab": "http://play-instathread.herokuapp.com/public/vocab/instathread.json#",
        "hydra": "http://www.w3.org/ns/hydra/core#",
        "ApiDocumentation": "hydra:ApiDocumentation",
        "property": {
            "@id": "hydra:property",
            "@type": "@id"
        },
        "readonly": "hydra:readonly",
        "writeonly": "hydra:writeonly",
        "supportedClass": "hydra:supportedClass",
        "supportedProperty": "hydra:supportedProperty",
        "supportedOperation": "hydra:supportedOperation",
        "method": "hydra:method",
        "expects": {
            "@id": "hydra:expects",
            "@type": "@id"
        },
        "returns": {
            "@id": "hydra:returns",
            "@type": "@id"
        },
        "statusCodes": "hydra:statusCodes",
        "code": "hydra:statusCode",
        "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
        "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
        "label": "rdfs:label",
        "description": "rdfs:comment",
        "domain": {
            "@id": "rdfs:domain",
            "@type": "@id"
        },
        "range": {
            "@id": "rdfs:range",
            "@type": "@id"
        },
        "subClassOf": {
            "@id": "rdfs:subClassOf",
            "@type": "@id"
        }
    },
    "@id": "./instathread.json",
    "@type": "ApiDocumentation",
    "supportedClass": [
	{
	    "@id": "vocab:EntryPoint",
	    "@type": "hydra:Class",
	    "label": "Instathread Entrypoint",
	    "description": "The main entry point for Instathread",
	    "supportedOperation": [
		{
		    "@id": "_:entryPoint",
		    "@type": "hydra:Operation",
		    "method": "GET",
		    "label": "The APIs main entry point.",
		    "returns": "vocab:EntryPoint"
		}
	    ],
	    "supportedProperty": [
		{
		    "hydra:property": {
			"@id": "vocab:threads",
			"@type": "hydra:Link",
			"label": "threads collection",
			"description": "The threads collection for creating a new collection",
			"hydra:SupportedOperation": [
			    {
				"@id": "_:createThread",
				"@type": "hydra:CreateResourceOperation",
				"method": "POST",
				"label": "Create Thread",
				"description": "Use this operation to create a new thread",
				"hydra:expects": "vocab:NewThreadRequest",
				"hydra:returns": "vocab:Thread"
			    }
			]
		    },
		    "label": "threads",
		    "description": "The threads collection to post new threads to"
		}
	    ]
	},
	{
	    "@id": "vocab:Thread",
	    "label": "Thread",
	    "description": "A thread",
	    "subClassOf": "hydra:Collection",
	    "supportedOperation": [
		{
		    "@type": "hydra:CreateResourceOperation",
		    "@id": "_:createComment",
		    "method": "POST",
		    "expects": "vocab:Comment",
		    "returns": "vocab:Thread"
		}
	    ],
	    "supportedProperty": [
		{
		    "property": "hydra:member",
		    "required": false,
		    "readonly": true
		}
	    ]
	},
	{
	    "@id": "vocab:NewThreadRequest",
	    "label": "New Thread",
	    "description": "A new thread request",
	    "supportedProperty": [
		{
		    "property": {
			"@id": "vocab:authorName",
			"@type": "rdf:property",
			"label": "Author Name",
			"description": "The author's name",
			"range": "xsd:string"
		    },
		    "required": false
		},
		{
		    "property": {
			"@id": "vocab:markdown",
			"@type": "rdf:property",
			"label": "Markdown Content",
			"description": "The markdown content of the post",
			"range": "xsd:string"
		    },
		    "required": true
		}
	    ]
	},
	{
	    "@id": "vocab:Comment",
	    "label": "Comment",
	    "description": "A thread comment",
	    "supportedProperty": [
		{
		    "property": "vocab:authorName",
		    "required": false
		},
		{
		    "property": "vocab:markdown",
		    "required": true
		},
		{
		    "property": "schema:dateCreated",
		    "writeonly": "true"
		}
	    ]

	}
    ]
}
